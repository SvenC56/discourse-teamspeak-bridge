{
  "name": "discourse-teamspeak-bridge-backend",
  "version": "1.0.0",
  "description": "Webserver which handels the connection to the teamspeak serverquery",
  "main": ".index.js",
  "scripts": {
    "start": "npm run prod",
    "server": "babel-node ./server",
    "server:prod": "node ./dist",
    "dev": "cross-env NODE_ENV=development nodemon --exec babel-node ./server/index.js",
    "clean": "rimraf dist",
    "build": "babel ./server --out-dir dist",
    "prod": "cross-env NODE_ENV=production npm-run-all clean build server:prod",
    "watch": "nodemon",
    "lint": "eslint --ext .js --ignore-path ../.gitignore .",
    "lint:teamcity": "eslint server  --ignore-path ../.gitignore --format node_modules/eslint-teamcity/index.js",
    "prettier": "prettier --config .prettierrc --write ./server/**/*.js ./*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SvenC56/discourse-teamspeak-bridge.git"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@hapi/boom": "^9.0.0",
    "app-root-path": "^3.0.0",
    "axios": "^0.19.2",
    "celebrate": "^11.0.1",
    "connect-history-api-fallback": "^1.6.0",
    "convict": "^5.2.0",
    "core-js": "^3.6.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "fs-extra": "^8.1.0",
    "helmet": "^3.21.2",
    "lodash": "^4.17.15",
    "lowdb": "^1.0.0",
    "node-cron": "^2.0.3",
    "qs": "^6.9.1",
    "regenerator-runtime": "^0.13.3",
    "shortid": "^2.2.15",
    "ts3-nodejs-library": "^2.3.3",
    "validator": "^12.2.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/node": "^7.8.4",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/runtime": "^7.8.4",
    "cross-env": "^7.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-teamcity": "^2.2.0",
    "husky": "^4.2.3",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2"
  }
}
